<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_fondo"
    tools:context=".Cliente.RegistrarNegocio">

    <GridLayout
        android:id="@+id/NegocioGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="8">

        <TextView
            android:id="@+id/txtCrearNegocio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crearNegocio"
            android:textColor="@color/colorBlanco"
            android:textAlignment="center"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:textSize="30sp"/>

        <TextView
            android:text="@string/txtNombreEstetica"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@color/colorBlanco"
            android:textSize="20sp"
            android:layout_column="0"
            android:layout_row="1"/>

        <EditText
            android:id="@+id/editNombreEstetica"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_row="1"
            android:textColor="@color/colorBlanco"
            android:textColorHint="@color/colorBlanco"
            android:hint="@string/hintNombreEstetica"
            android:layout_marginLeft="10dp"
            android:inputType="text"/>

        <TextView
            android:text="@string/txtPropietario"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@color/colorBlanco"
            android:textSize="20sp"
            android:layout_column="0"
            android:layout_row="2"/>

        <EditText
            android:id="@+id/editPropietario"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_row="2"
            android:textColor="@color/colorBlanco"
            android:textColorHint="@color/colorBlanco"
            android:hint="@string/hintPropietario"
            android:inputType="text"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:text="@string/txtDireccion"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@color/colorBlanco"
            android:textSize="20sp"
            android:layout_column="0"
            android:layout_row="3"/>

        <EditText
            android:id="@+id/editDireccion"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_row="3"
            android:textColor="@color/colorBlanco"
            android:textColorHint="@color/colorBlanco"
            android:hint="@string/hintDireccion"
            android:inputType="text"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:text="@string/txtRFC"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/colorBlanco"
            android:textSize="20sp"
            android:layout_column="0"
            android:layout_row="4"/>

        <EditText
            android:id="@+id/editRFC"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_row="4"
            android:textColor="@color/colorBlanco"
            android:textColorHint="@color/colorBlanco"
            android:hint="@string/hintRFC"
            android:inputType="text"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:text="@string/txtDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/colorBlanco"
            android:textSize="20sp"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_columnSpan="2"/>

        <EditText
            android:id="@+id/editDescripcion"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="6"
            android:layout_columnSpan="2"
            android:textColor="@color/colorNegro"
            android:textColorHint="@color/colorNegro"
            android:inputType="textMultiLine"
            android:background="@color/colorBlanco"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:text="@string/txtPolitica"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@color/colorBlanco"
            android:textSize="20sp"
            android:layout_column="0"
            android:layout_row="7"/>

        <TextView
            android:text="@string/txtPoliticaLink"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:autoLink="all"
            android:clickable="true"
            android:focusable="true"
            android:layout_column="1"
            android:layout_row="7"/>

        <RelativeLayout
            android:layout_columnSpan="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="128dp"
            tools:layout_editor_absoluteY="451dp">

            <CheckBox
                android:id="@+id/ckAceptoPolitica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/ckAceptoPolitica"
                android:textAlignment="center"
                android:textColor="@color/colorBlanco"
                android:buttonTint="@color/colorBlanco"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="459dp" />

            <Button
                android:id="@+id/terminarRegistro"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ckAceptoPolitica"
                android:text="@string/registrarse"
                android:textColor="@color/colorBlanco"
                android:background="@color/itemselec"
                android:layout_centerHorizontal="true"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="503dp" />

        </RelativeLayout>

    </GridLayout>

</android.support.constraint.ConstraintLayout>