<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_servicio"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_blanco_redondo_card">

        <TextView
            android:id="@+id/obj_servicio_nombre"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/obj_servicio_img"
            android:hint="Corte"
            android:textColor="@color/colorNegro"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/obj_servicio_tiempo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:hint="15 min"
            android:textColor="@color/colorNegro"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/obj_servicio_costo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:hint="$200.0"
            android:textColor="@color/colorNegro"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/obj_servicio_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</android.support.v7.widget.CardView>