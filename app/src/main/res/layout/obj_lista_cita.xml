<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_cita"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_blanco_redondo_card"
        >

        <TextView
            android:id="@+id/obj_cita_lugar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="35dp"
            android:textColor="@color/colorNegro"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:hint="EstÃ©tica Alex" />


        <TextView
            android:id="@+id/obj_cita_fecha"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/obj_cita_lugar"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorNegro"
            android:textSize="20dp"
            android:hint="LUNES/OCT/20" />

        <TextView
            android:id="@+id/obj_cita_hora"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorNegro"
            android:hint="11:30"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/obj_cita_estado"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />


    </RelativeLayout>

</android.support.v7.widget.CardView>