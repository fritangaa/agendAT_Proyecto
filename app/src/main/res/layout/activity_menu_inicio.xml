<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_fondo"
    tools:context=".usuario.MenuInicio">

    <ImageView
        android:id="@+id/imgInicioUsuario"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/txtInicioNombre"
        android:layout_toLeftOf="@+id/valInicioUsuario"
        android:layout_toStartOf="@+id/valInicioUsuario"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/txtInicioNombre"
        android:text="Nombre del Usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorBlanco"
        android:textSize="18dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgInicioUsuario"
        android:layout_alignRight="@+id/valInicioUsuario"
        android:layout_alignEnd="@+id/valInicioUsuario" />

    <TextView
        android:id="@+id/txtInicioCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android.studio@android.com"
        android:gravity="center"
        android:textColor="@color/colorBlanco"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txtInicioNombre"
        android:layout_alignRight="@+id/valInicioUsuario"
        android:layout_alignEnd="@+id/valInicioUsuario"
        android:layout_toRightOf="@+id/imgInicioUsuario"
        android:layout_toEndOf="@+id/imgInicioUsuario" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlanco"
        android:gravity="center"
        android:text="CalificaciÃ³n"
        android:layout_above="@+id/valInicioUsuario"
        android:id="@+id/textView3"
        android:layout_toRightOf="@+id/imgInicioUsuario"
        android:layout_alignRight="@+id/valInicioUsuario"
        android:layout_alignEnd="@+id/valInicioUsuario" />

    <RatingBar
        android:id="@+id/valInicioUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgInicioUsuario"
        android:layout_marginTop="12dp"
        android:progressBackgroundTint="@color/colorBotonOn"
        android:progressTint="@android:color/holo_blue_light"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <Button

        android:id="@+id/btnInicioMiscitas"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:drawablePadding="2dp"
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/ic_inicio_miscitas"
        android:text="Mis Citas"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/btnInicioCercati"
        android:layout_alignLeft="@+id/imgInicioUsuario"
        android:layout_alignStart="@+id/imgInicioUsuario"
        android:layout_alignTop="@+id/btnInicioCercati" />

    <Button
        android:id="@+id/btnInicioCercati"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:drawablePadding="2dp"
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/ic_inicio_cerca"
        android:text="Cerca de ti"
        android:textSize="18dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/valInicioUsuario"
        android:layout_alignEnd="@+id/valInicioUsuario" />



    <Button
        android:id="@+id/btnInicioArmarcita"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:drawablePadding="2dp"
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/ic_inicio_armar"
        android:text="Agendar Cita"
        android:textSize="18dp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/btnInicioMiscitas"
        android:layout_alignLeft="@+id/valInicioUsuario"
        android:layout_alignStart="@+id/valInicioUsuario" />

    <Button
        android:id="@+id/btnInicioCitaexp"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/imgInicioUsuario"
        android:layout_alignTop="@+id/btnInicioPromo"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_inicio_citaexp"
        android:drawablePadding="2dp"
        android:text="Cita Expres"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnInicioPromo"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:drawablePadding="2dp"
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/ic_inicio_promo"
        android:text="Promociones+"
        android:textSize="18dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/btnInicioArmarcita"
        android:layout_alignRight="@+id/btnInicioCercati"
        android:layout_alignEnd="@+id/btnInicioCercati" />

</RelativeLayout>